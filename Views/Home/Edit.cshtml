@model Book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Book</h2>

    <div class="card shadow-lg p-4">
        <form asp-action="Edit" method="post">
            <!-- Hidden field for ID (needed for updates) -->
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" required>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Author" class="form-label">Author</label>
                <input asp-for="Author" class="form-control" required>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Genre" class="form-label">Genre</label>
                <input asp-for="Genre" class="form-control">
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="PublishedDate" class="form-label">Published Date</label>
                <input asp-for="PublishedDate" class="form-control" type="date" required>
                <span asp-validation-for="PublishedDate" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="ISBN" class="form-label">ISBN (13 digits)</label>
                <input asp-for="ISBN" class="form-control" required>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
