@model BSLibrary.Models.TaskItem

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Task";
}

<h1>@ViewData["Title"]</h1>
<br />

<h4>Edit Task</h4>
<br />

<form asp-action="Edit" method="post" class="row g-2 align-items-center mb-3">
    @Html.AntiForgeryToken()

    <!-- Hidden Field for ID -->
    <input type="hidden" asp-for="Id" />

    <div class="col-auto">
        <!-- Bind Title property to the input field -->
        <input asp-for="Title" class="form-control form-control-sm" placeholder="Task Title" required style="width: 150px;" />
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="col-auto">
        <!-- Bind Description property to the input field -->
        <input asp-for="Description" class="form-control form-control-sm" placeholder="Description" required style="width: 200px;" />
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>

    <div class="col-auto d-flex align-items-end">
        <button type="submit" class="btn btn-primary btn-sm">Edit Task</button>
    </div>
</form>
